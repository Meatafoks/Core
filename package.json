{
  "name": "@metafoks/core",
  "version": "1.0.0",
  "description": "Metafoks core application package",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Meatafoks/Core"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "lint": "eslint src --fix --ext .js,.ts",
    "deploy": "npm run test && npm run build && npm version patch && npm publish"
  },
  "author": "Yakov Foks <notafoks@yandex.ru>",
  "license": "MIT",
  "dependencies": {
    "@metafoks/logger": "^1.0.0",
    "@metafoks/utils": "^1.0.1",
    "reflect-metadata": "^0.2.1",
    "typescript": "5.3.3"
  },
  "devDependencies": {
    "@metafoks/eslint-config": "1.0.0",
    "@metafoks/prettier": "1.0.0",
    "@types/jest": "29.4.0",
    "@types/node": "^20.11.10",
    "eslint": "8.56.0",
    "eslint-plugin-jest": "^27.4.3",
    "jest": "29.4.3",
    "prettier": "3.2.4",
    "ts-jest": "29.0.5"
  },
  "prettier": "@metafoks/prettier",
  "eslintConfig": {
    "extends": [
      "@metafoks/eslint-config"
    ],
    "env": {
      "jest": true
    },
    "plugins": [
      "jest"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "html",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "<rootDir>/src/index.ts",
      ".mock.ts"
    ],
    "coverageDirectory": "<rootDir>/coverage/",
    "testRegex": "(/test/.*\\.(test|spec))\\.(jsx?|tsx?|ts|js)$",
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node",
      "jsx",
      "tsx"
    ]
  }
}
